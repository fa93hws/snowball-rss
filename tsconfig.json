{
  "compilerOptions": {
    "strict": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES5",
    "baseUrl": "./",
    "outDir": "dist",
    "declaration": true,
    "types": ["jest", "node"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@services/*": ["src/services/*"]
    }
  }
}
